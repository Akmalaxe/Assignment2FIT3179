{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Human Development Index (HDI) for selected countries by year with dropdown filter and annotation.",
  "data": {"url": "HDI_Table_Regions.csv"},
  "layer":[{
    "mark": {"type":"bar",
    "cornerRadiusTopLeft": 4,
        "cornerRadiusTopRight": 4,
        "width": 20
},
    "encoding": {
        "x": { "field": "HDI", "type": "quantitative", "title":"Human Development Index"},
        "y": { "field": "Regions", "type": "nominal", "title": null,"axis": {"labelAngle": 0, "labelFontSize": 10, "titleFontSize": 13}},
        "color": {"value": "#1f77b4"},
        "tooltip": [
          {"field": "Regions", "title": "Region"},
          {"field": "HDI", "title": "HDI", "format": ".3f"}
        ]
    }
}
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": false},
    "bar": {"size": 20}
  },
  "width": 450,
  "height": 350
  }